{
  "rules": {
    "users": {
      ".read": "true",
      ".write": "auth != null",
      "$uid": {
        ".read": "true",
        ".write": "$uid === auth.uid"
      }
    },
    "posts": {
      ".read": "true",
      ".write": " auth != null",
      "$postid": {
        ".read": "true",
        ".write": "auth != null && (data.child('Uid').val() === auth.uid) || !data.exists()",
        ".validate": "newData.child('body').val().length > 0"
      }
    },
    "questions": {
      ".read": "true",
      ".write": " auth != null",
      "$qid": {
        ".read": "true",
        ".write": "auth != null && ( data.child('Uid').val() === auth.uid || !data.exists() )",
        ".validate": "newData.child('question').val().length > 0"
      }
    }
  }
}