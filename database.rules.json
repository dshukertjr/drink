{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "questions": {
      ".read": "true",
      "$qid": {
        ".write": " auth != null",
        ".validate": "newData.child('question').val().length > 0 && newData.child('choice1').val().length > 0 && newData.child('choice2').val().length > 0",
        "answers": {
          ".write": "auth != null && ( data.child('Uid').val() === auth.uid || !data.exists() )"
        },
        "comments": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    }
  }
}